{
  "name": "react-augmentation",
  "version": "1.0.0",
  "description": "DOM augmentation to enable simpler DOM hierarchy",
  "module": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "babel ./src --ignore *.test.js --out-dir ./lib --source-maps",
    "build:watch": "npm run build -- --watch",
